{% extends 'main/index.html.twig' %}

{% block title %}Gestion du profil {{ app.user.username }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
    {% block content %}
        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="flash-success">
                    {{ message }}
                </div>
            {% endfor %}

            <h1>Gestion de compte</h1>
